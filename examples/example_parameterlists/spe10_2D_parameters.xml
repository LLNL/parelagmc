        <Parameter name="Relative tolerance" type="double"
                   value="1e-4"/>
        <Parameter name="Absolute tolerance" type="double"
                   value="1e-4"/>
        <Parameter name="Restart size" type="int" value="50"/>
      </ParameterList>
      <!-- ParameterList "Solver Parameters" -->
    </ParameterList>
    <!-- ParameterList "PCG-AMS" -->

    <!-- PCG preconditioned with ADS preconditioner -->
    <ParameterList name="PCG-ADS">
      <Parameter name="Type" type="string" value="Krylov"/>
      <ParameterList name="Solver Parameters">
        <Parameter name="Solver name" type="string" value="PCG"/>
        <Parameter name="Preconditioner" type="string" value="ADS Solver"/>
        <Parameter name="Print level" type="int" value="-1"/>
        <Parameter name="Maximum iterations" type="int" value="3"/>
        <Parameter name="Relative tolerance" type="double"
                   value="0"/>
        <Parameter name="Absolute tolerance" type="double"
                   value="0"/>
        <Parameter name="Restart size" type="int" value="50"/>
      </ParameterList>
      <!-- ParameterList "Solver Parameters" -->
    </ParameterList>
    <!-- ParameterList "PCG-ADS" -->

    <!-- MINRES preconditioned with block-LDU preconditioner -->
    <ParameterList name="MINRES-LDU-GS">
      <Parameter name="Type" type="string" value="Krylov"/>
      <ParameterList name="Solver Parameters">
        <Parameter name="Solver name" type="string" value="MINRES"/>
        <Parameter name="Preconditioner" type="string"
                   value="Block-LDU-GS"/>
        <Parameter name="Print level" type="int" value="-1"/>
        <Parameter name="Maximum iterations" type="int" value="3"/>
        <Parameter name="Relative tolerance" type="double"
                   value="0"/>
        <Parameter name="Absolute tolerance" type="double"
                   value="0"/>
        <Parameter name="Restart size" type="int" value="50"/>
      </ParameterList>
      <!-- ParameterList "Solver Parameters" -->
    </ParameterList>
    <!-- ParameterList "MINRES-LDU-GS" -->

    <!-- MINRES preconditioned with block-Jacobi preconditioner (L2-H1 prec)-->
    <ParameterList name="MINRES-BJ-GS">
      <Parameter name="Type" type="string" value="Krylov"/>
      <ParameterList name="Solver Parameters">
        <Parameter name="Solver name" type="string" value="MINRES"/>
        <Parameter name="Preconditioner" type="string"
                   value="BJ-GS"/>
        <Parameter name="Print level" type="int" value="-1"/>
        <Parameter name="Maximum iterations" type="int" value="2000"/>
        <Parameter name="Relative tolerance" type="double"
                   value="1e-6"/>
        <Parameter name="Absolute tolerance" type="double"
                   value="1e-12"/>
        <Parameter name="Restart size" type="int" value="50"/>
      </ParameterList>
      <!-- ParameterList "Solver Parameters" -->
    </ParameterList>
    <!-- ParameterList "MINRES-BJ-GS" -->

    <!-- MINRES preconditioned with block-GS preconditioner -->
    <ParameterList name="MINRES-BGS-GS">
      <Parameter name="Type" type="string" value="Krylov"/>
      <ParameterList name="Solver Parameters">
        <Parameter name="Solver name" type="string" value="MINRES"/>
        <Parameter name="Preconditioner" type="string"
                   value="Block Gauss-Seidel GS"/>
        <Parameter name="Print level" type="int" value="-1"/>
        <Parameter name="Maximum iterations" type="int" value="3"/>
        <Parameter name="Relative tolerance" type="double"
                   value="0"/>
        <Parameter name="Absolute tolerance" type="double"
                   value="0"/>
        <Parameter name="Restart size" type="int" value="50"/>
      </ParameterList>
      <!-- ParameterList "Solver Parameters" -->
    </ParameterList>
    <!-- ParameterList "MINRES-BGS-GS" -->

    <!-- GMRES preconditioned with block-LDU preconditioner -->
    <ParameterList name="GMRES-LDU-ADS">
      <Parameter name="Type" type="string" value="Krylov"/>
      <ParameterList name="Solver Parameters">
        <Parameter name="Solver name" type="string" value="GMRES"/>
